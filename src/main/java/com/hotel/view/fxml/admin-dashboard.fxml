<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hotel.controller.AdminController" styleClass="glass-panel">

    <children>
        <VBox spacing="20">
            <Label text="Tableau de bord Admin" styleClass="neon-title"/>

            <!-- En-tête -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="glass-panel header">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
                </padding>
                <Label fx:id="welcomeLabel" styleClass="cyber-title" text="Bienvenue, Admin">
                    <font>
                        <Font name="Orbitron" size="20.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <ToggleButton fx:id="fullscreenToggle" styleClass="neon-button" onAction="#handleToggleFullScreen" text="Plein écran"/>
                <Button mnemonicParsing="false" onAction="#handleLogout" styleClass="neon-button" text="Déconnexion"/>
            </HBox>

            <!-- Contenu principal avec ScrollPane pour permettre le scroll vertical -->
            <ScrollPane fitToWidth="true" pannable="true" styleClass="scanlines">
                <content>
                    <VBox spacing="20.0" styleClass="glass-panel">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                        </padding>

                        <!-- Statistiques -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <VBox alignment="CENTER" spacing="5.0" styleClass="stat-card glass-panel">
                                <padding>
                                    <Insets bottom="15.0" left="25.0" right="25.0" top="15.0"/>
                                </padding>
                                <Label styleClass="stat-label neon-accent" text="Chambres Libres"/>
                                <Label fx:id="statsLibreLabel" styleClass="stat-value neon-accent" text="0">
                                    <font>
                                        <Font name="Orbitron" size="28.0"/>
                                    </font>
                                </Label>
                            </VBox>

                            <VBox alignment="CENTER" spacing="5.0" styleClass="stat-card glass-panel">
                                <padding>
                                    <Insets bottom="15.0" left="25.0" right="25.0" top="15.0"/>
                                </padding>
                                <Label styleClass="stat-label neon-accent" text="Chambres Occupées"/>
                                <Label fx:id="statsOccupeeLabel" styleClass="stat-value neon-accent" text="0">
                                    <font>
                                        <Font name="Orbitron" size="28.0"/>
                                    </font>
                                </Label>
                            </VBox>

                            <VBox alignment="CENTER" spacing="5.0" styleClass="stat-card glass-panel">
                                <padding>
                                    <Insets bottom="15.0" left="25.0" right="25.0" top="15.0"/>
                                </padding>
                                <Label styleClass="stat-label neon-accent" text="En Ménage"/>
                                <Label fx:id="statsMenageLabel" styleClass="stat-value neon-accent" text="0">
                                    <font>
                                        <Font name="Orbitron" size="28.0"/>
                                    </font>
                                </Label>
                            </VBox>

                            <VBox alignment="CENTER" spacing="5.0" styleClass="stat-card glass-panel">
                                <padding>
                                    <Insets bottom="15.0" left="25.0" right="25.0" top="15.0"/>
                                </padding>
                                <Label styleClass="stat-label neon-accent" text="Avis en attente"/>
                                <Label fx:id="statsPendingReviewsLabel" styleClass="stat-value neon-accent" text="0">
                                    <font>
                                        <Font name="Orbitron" size="28.0"/>
                                    </font>
                                </Label>
                            </VBox>
                        </HBox>

                        <!-- TabPane -->
                        <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" styleClass="glass-panel">
                            <!-- Onglet Chambres -->
                            <Tab text="Gestion des Chambres">
                                <VBox spacing="15.0">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>

                                    <TableView fx:id="roomsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                                        <columns>
                                            <TableColumn fx:id="roomNumberColumn" prefWidth="100.0" text="Numéro"/>
                                            <TableColumn fx:id="roomTypeColumn" prefWidth="150.0" text="Type"/>
                                            <TableColumn fx:id="roomPriceColumn" prefWidth="120.0" text="Prix (€)"/>
                                            <TableColumn fx:id="roomStatusColumn" prefWidth="150.0" text="Statut"/>
                                        </columns>
                                    </TableView>

                                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                                        <Label text="Changer le statut :" styleClass="neon-accent"/>
                                        <ComboBox fx:id="statusComboBox" prefWidth="150.0" styleClass="glass-input"/>
                                        <Button mnemonicParsing="false" onAction="#handleUpdateRoomStatus"
                                                styleClass="neon-button" text="Mettre à jour"/>
                                    </HBox>
                                </VBox>
                            </Tab>

                            <!-- Onglet Réservations -->
                            <Tab text="Toutes les Réservations">
                                <VBox spacing="15.0">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>

                                    <TableView fx:id="reservationsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                                        <columns>
                                            <TableColumn fx:id="resIdColumn" prefWidth="60.0" text="ID"/>
                                            <TableColumn fx:id="resClientColumn" prefWidth="180.0" text="Client"/>
                                            <TableColumn fx:id="resRoomColumn" prefWidth="100.0" text="Chambre"/>
                                            <TableColumn fx:id="resCheckInColumn" prefWidth="120.0" text="Arrivée"/>
                                            <TableColumn fx:id="resCheckOutColumn" prefWidth="120.0" text="Départ"/>
                                            <TableColumn fx:id="resStatusColumn" prefWidth="120.0" text="Statut"/>
                                        </columns>
                                    </TableView>
                                </VBox>
                            </Tab>

                            <!-- Onglet Avis et Réclamations -->
                            <Tab text="Avis et Réclamations">
                                <VBox spacing="15.0">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>

                                    <TableView fx:id="reviewsTable" prefHeight="250.0" styleClass="table-view">
                                        <columns>
                                            <TableColumn fx:id="reviewIdColumn" prefWidth="50.0" text="ID"/>
                                            <TableColumn fx:id="reviewClientColumn" prefWidth="150.0" text="Client"/>
                                            <TableColumn fx:id="reviewTypeColumn" prefWidth="120.0" text="Type"/>
                                            <TableColumn fx:id="reviewContentColumn" prefWidth="380.0" text="Contenu"/>
                                        </columns>
                                    </TableView>

                                    <Label text="Réponse de l'administration :" styleClass="neon-accent">
                                        <font>
                                            <Font name="System Bold" size="14.0"/>
                                        </font>
                                    </Label>

                                    <TextArea fx:id="responseTextArea" prefHeight="100.0"
                                              promptText="Entrez votre réponse ici..." wrapText="true" styleClass="glass-input"/>

                                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                        <Button mnemonicParsing="false" onAction="#handleRespondToReview"
                                                styleClass="neon-button" text="Répondre"/>
                                    </HBox>
                                </VBox>
                            </Tab>

                            <!-- Nouvel onglet Utilisateurs -->
                            <Tab text="Utilisateurs">
                                <VBox spacing="15.0">
                                    <padding>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                                    </padding>

                                    <TableView fx:id="usersTable" prefHeight="250.0" styleClass="table-view">
                                        <columns>
                                            <TableColumn fx:id="userIdColumn" prefWidth="60.0" text="ID"/>
                                            <TableColumn fx:id="userLoginColumn" prefWidth="160.0" text="Login"/>
                                            <TableColumn fx:id="userNameColumn" prefWidth="220.0" text="Nom"/>
                                            <TableColumn fx:id="userRoleColumn" prefWidth="140.0" text="Rôle"/>
                                        </columns>
                                    </TableView>

                                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                        <Button mnemonicParsing="false" onAction="#handleAddReceptionist"
                                                styleClass="neon-button" text="Ajouter Réceptionniste"/>
                                        <Button mnemonicParsing="false" onAction="#handleRemoveUser"
                                                styleClass="neon-button magenta" text="Supprimer"/>
                                    </HBox>
                                </VBox>
                            </Tab>
                        </TabPane>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
